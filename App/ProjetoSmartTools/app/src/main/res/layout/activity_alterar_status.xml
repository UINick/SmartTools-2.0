<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F2E7"
    tools:context=".Servicos.AlterarStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/new_entry"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/botao_cliente"
            android:backgroundTint="#2C3333"
            android:fontFamily="@font/poppins_regular"
            android:text="Pendente"
            android:onClick="clickPendente"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/new_exit"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/botao_cliente"
            android:backgroundTint="#2C3333"
            android:fontFamily="@font/poppins_regular"
            android:text="Em andamento"
            android:onClick="clickEmAndamento"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/new_vehicle"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/botao_cliente"
            android:backgroundTint="#2C3333"
            android:fontFamily="@font/poppins_regular"
            android:text="Finalizado"
            android:onClick="clickFinalizado"
            android:textSize="15sp"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>